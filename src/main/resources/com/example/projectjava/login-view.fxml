<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
   <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
   </rowConstraints>
   <children>
      <ImageView fx:id="login_img" fitHeight="484.0" fitWidth="382.0" pickOnBounds="true" preserveRatio="true" />
      <AnchorPane fx:id="login_field" prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1">
         <children>
            <HBox fx:id="login_hbox" alignment="CENTER" layoutY="84.0" prefHeight="38.0" prefWidth="298.0">
               <children>
                  <Label fx:id="id_label" text="Login ID" />
                  <TextField fx:id="id_field" />
               </children>
            </HBox>
            <HBox fx:id="pass_hbox" alignment="CENTER" layoutY="122.0" prefHeight="38.0" prefWidth="298.0">
               <children>
                  <Label text="Password" />
                  <TextField />
               </children>
            </HBox>
         </children>
      </AnchorPane>
   </children>
</GridPane>
